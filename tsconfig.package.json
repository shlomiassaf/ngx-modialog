{
  "extends": "./tsconfig",
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "sourceMap": true,
    "inlineSources": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noEmit": false,
    "declaration": true,
    "stripInternal": false,
    "outDir": ".",
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jasmine",
      "hammerjs",
      "node"
    ]
  },
  "exclude": [
    "scripts",
    "node_modules",
    "dist",
    "dist_package",
    "e2e",
    "src/**/*.spec.ts",
    "src/demo"
  ]
}
